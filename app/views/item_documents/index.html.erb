<h1>Listing item_documents</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Document file name</th>
      <th>Document content type</th>
      <th>Document file size</th>
      <th>Document updated at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_documents.each do |item_document| %>
      <tr>
        <td><%= item_document.item_id %></td>
        <td><%= item_document.document_file_name %></td>
        <td><%= item_document.document_content_type %></td>
        <td><%= item_document.document_file_size %></td>
        <td><%= item_document.document_updated_at %></td>
        <td><%= link_to 'Show', item_document %></td>
        <td><%= link_to 'Edit', edit_item_document_path(item_document) %></td>
        <td><%= link_to 'Destroy', item_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

