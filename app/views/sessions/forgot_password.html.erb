<h3 class="text-center"><%= t('forgot_password') %></h3>

<div class="row">
	<div class="large-6 large-offset-3 columns">
		<div class="panel">
			<%= form_tag forgot_password_path, method: :post do %>
				<%= label_tag :email, t('enter_your_email_label') %>
				<%= text_field_tag :email %>

				<div class="actions"><%= submit_tag t('send_password_reset'), class: "radius button" %></div>
			<% end %>
		</div>
		<p><%= link_to t('login'), new_session_path %></p>
	</div>
</div>
