<%= simple_form_for @category, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, input_html: { style: "height: 120px; font-size: 15px"} %>
    <%= f.input :header_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "radius button" %>
  </div>
<% end %>
