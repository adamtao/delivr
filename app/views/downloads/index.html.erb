<h1>Listing downloads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Item</th>
      <th>File file name</th>
      <th>File content type</th>
      <th>File file size</th>
      <th>File updated at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @downloads.each do |download| %>
      <tr>
        <td><%= download.name %></td>
        <td><%= download.item_id %></td>
        <td><%= download.file_file_name %></td>
        <td><%= download.file_content_type %></td>
        <td><%= download.file_file_size %></td>
        <td><%= download.file_updated_at %></td>
        <td><%= link_to 'Show', download %></td>
        <td><%= link_to 'Edit', edit_download_path(download) %></td>
        <td><%= link_to 'Destroy', download, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

